<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Edit Movie</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="icon" type="image/x-icon" href="/images/favicon.png">

    <style>
        body {
            background: #f5f5f5;
            margin: 0;
        }

        .search-input {
            max-width: 600px;
        }

        footer {
            background: #111;
            color: #bbb;
        }

        footer a {
            color: #bbb;
            text-decoration: none;
        }
    </style>
</head>

<body>

    <!-- ================= HEADER ================= -->
    <nav class="navbar navbar-expand-lg bg-white shadow-sm">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="/">
                <img src="/images/logo.png" height="32">
            </a>

            <form class="d-flex flex-grow-1 mx-4">
                <input class="form-control rounded-pill search-input"
                    placeholder="Search for Movies, Events, Plays and more">
            </form>

            <div class="d-flex gap-2 align-items-center">
                <select class="form-select form-select-sm rounded-pill">
                    <option>üìç Surat</option>
                    <option>Ahmedabad</option>
                    <option>Mumbai</option>
                    <option>Delhi</option>
                    <option>Bangalore</option>
                </select>

                <a href="/" class="btn btn-danger btn-sm rounded-pill px-3 text-nowrap">
                    Sign In
                </a>
            </div>
        </div>
    </nav>

    <!-- ================= SECONDARY HEADER ================= -->
    <div class="bg-white border-bottom shadow-sm">
        <div class="container-fluid px-4">
            <ul class="nav fw-semibold py-2">
                <li class="nav-item"><a class="nav-link text-dark" href="#">Movies</a></li>
                <li class="nav-item"><a class="nav-link text-dark" href="#">Events</a></li>
                <li class="nav-item"><a class="nav-link text-dark" href="#">Plays</a></li>
                <li class="nav-item"><a class="nav-link text-dark" href="#">Sports</a></li>
                <li class="nav-item"><a class="nav-link text-dark" href="#">Activities</a></li>
            </ul>
        </div>
    </div>

    <!-- ================= EDIT MOVIE ================= -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow border-0">
                    <div class="card-body p-4">
                        <h4 class="text-center fw-bold mb-4">Edit Movie</h4>

                        <form action="/update/<%= movie.id %>" method="post" enctype="multipart/form-data">

                            <input class="form-control mb-3" name="title" value="<%= movie.title %>"
                                placeholder="Movie Title" required>

                            <textarea class="form-control mb-3" name="description" rows="3"
                                placeholder="Description"><%= movie.description %></textarea>

                            <input class="form-control mb-3" name="genre" value="<%= movie.genre %>"
                                placeholder="Genre">

                            <input class="form-control mb-3" name="rating" value="<%= movie.rating %>"
                                placeholder="Rating">

                            <input class="form-control mb-3" name="director" value="<%= movie.director %>"
                                placeholder="Director">

                            <input class="form-control mb-3" name="releaseYear" value="<%= movie.releaseYear %>"
                                placeholder="Release Year">

                            <input class="form-control mb-4" type="file" name="poster">

                            <button class="btn btn-danger w-100 rounded-pill fw-semibold">
                                Update Movie
                            </button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ================= FOOTER ================= -->
    <footer class="mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-3">
                    <h6 class="text-white">BookMyShow</h6>
                    <p>Movies, Events & Sports</p>
                </div>
                <div class="col-md-3">
                    <h6 class="text-white">Explore</h6>
                    <p>Movies | Events | Plays</p>
                </div>
                <div class="col-md-3">
                    <h6 class="text-white">Support</h6>
                    <p>Help | FAQs</p>
                </div>
                <div class="col-md-3">
                    <h6 class="text-white">Contact</h6>
                    <p>support@bookmyshow.com</p>
                </div>
            </div>

            <hr class="border-secondary">

            <p class="text-center small mb-0">
                ¬© 2025 BookMyShow Clone. All Rights Reserved.
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>