<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>BookMyShow | Movies</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="icon" type="image/x-icon" href="/images/favicon.png">

    <style>
        body {
            background: #f5f5f5;
            margin: 0;
        }

        .search-input {
            max-width: 600px;
        }

        .movie-card img {
            height: 300px;
            object-fit: cover;
        }

        /* BUTTONS */
        .action-btn {
            transition: 0.3s;
        }

        .edit-btn {
            background: #ffc107;
            border: none;
            color: #000;
        }

        .edit-btn:hover {
            background: #e0a800;
        }

        .delete-btn {
            background: #dc3545;
            border: none;
            color: #fff;
        }

        .delete-btn:hover {
            background: #b02a37;
        }

        /* RATING */
        .rating {
            color: #f5c518;
            /* IMDb / BookMyShow yellow */
            font-weight: 600;
        }

        /* FOOTER */
        footer {
            background: #111;
            color: #bbb;
        }

        footer a {
            color: #bbb;
            text-decoration: none;
        }
    </style>
</head>

<body>

    <!-- ================= HEADER ================= -->
    <nav class="navbar navbar-expand-lg bg-white shadow-sm">
        <div class="container-fluid px-4">
            <a class="navbar-brand" href="/">
                <img src="/images/logo.png" height="32">
            </a>

            <form class="d-flex flex-grow-1 mx-4">
                <input class="form-control rounded-pill search-input"
                    placeholder="Search for Movies, Events, Plays and more">
            </form>

            <div class="d-flex gap-2 align-items-center">
                <select class="form-select form-select-sm rounded-pill">
                    <option>üìç Surat</option>
                    <option>Ahmedabad</option>
                    <option>Mumbai</option>
                    <option>Delhi</option>
                    <option>Bangalore</option>
                </select>

                <a href="/" class="btn btn-danger btn-sm rounded-pill px-3 text-nowrap">Sign In</a>
            </div>
        </div>
    </nav>

    <!-- ================= SECONDARY HEADER ================= -->
    <div class="bg-white border-bottom shadow-sm">
        <div class="container-fluid px-4">
            <ul class="nav fw-semibold py-2">
                <li class="nav-item"><a class="nav-link text-dark" href="#">Movies</a></li>
                <li class="nav-item"><a class="nav-link text-dark" href="#">Events</a></li>
                <li class="nav-item"><a class="nav-link text-dark" href="#">Plays</a></li>
                <li class="nav-item"><a class="nav-link text-dark" href="#">Sports</a></li>
                <li class="nav-item"><a class="nav-link text-dark" href="#">Activities</a></li>
            </ul>
        </div>
    </div>

    <!-- ================= CAROUSEL ================= -->
    <div class="container mt-4">
        <div id="mainCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
            <div class="carousel-indicators"> <button data-bs-target="#mainCarousel" data-bs-slide-to="0"
                    class="active"></button> <button data-bs-target="#mainCarousel" data-bs-slide-to="1"></button>
                <button data-bs-target="#mainCarousel" data-bs-slide-to="2"></button> <button
                    data-bs-target="#mainCarousel" data-bs-slide-to="3"></button>
            </div>
            <div class="carousel-inner rounded">
                <div class="carousel-item active"> <img
                        src="https://assets-in-gm.bmscdn.com/promotions/cms/creatives/1765445726530_webbanner1240x300boy.jpg"
                        class="w-100"> </div>
                <div class="carousel-item"> <img
                        src="https://assets-in-gm.bmscdn.com/promotions/cms/creatives/1765966081825_webbannerchris.jpg"
                        class="w-100"> </div>
                <div class="carousel-item"> <img
                        src="https://assets-in-gm.bmscdn.com/promotions/cms/creatives/1763467944657_popdes.jpg"
                        class="w-100"> </div>
                <div class="carousel-item"> <img
                        src="https://assets-in-gm.bmscdn.com/promotions/cms/creatives/1766394146829_zksuratbms1240x300.jpg"
                        class="w-100"> </div>
            </div> <button class="carousel-control-prev" data-bs-target="#mainCarousel" data-bs-slide="prev"> <span
                    class="carousel-control-prev-icon"></span> </button> <button class="carousel-control-next"
                data-bs-target="#mainCarousel" data-bs-slide="next"> <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </div>

    <!-- ================= ADD MOVIE ================= -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow border-0">
                    <div class="card-body p-4">
                        <h4 class="text-center fw-bold mb-4">Add New Movie</h4>

                        <form action="/add" method="post" enctype="multipart/form-data">
                            <input class="form-control mb-3" name="title" placeholder="Movie Title" required>
                            <textarea class="form-control mb-3" name="description" rows="3"
                                placeholder="Description"></textarea>
                            <input class="form-control mb-3" name="genre" placeholder="Genre">
                            <input class="form-control mb-3" type="number" step="0.1" min="0" max="10" name="rating"
                                placeholder="Rating">
                            <input class="form-control mb-3" name="director" placeholder="Director">
                            <input class="form-control mb-3" type="number" name="releaseYear"
                                placeholder="Release Year">
                            <input class="form-control mb-4" type="file" name="poster">

                            <button class="btn btn-danger w-100 rounded-pill fw-semibold">
                                Add Movie
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ================= MOVIE LIST ================= -->
    <div class="container mt-5">
        <h3 class="fw-bold mb-4">Now Showing</h3>

        <div class="row">
            <% allMovies.forEach(movie=> { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card movie-card shadow-sm h-100 border-0">

                        <img src="<%= movie.poster %>" class="img-fluid rounded mb-3" style="height:400px;">

                        <div class="card-body d-flex flex-column">
                            <h6 class="fw-bold">
                                <%= movie.title %>
                            </h6>

                            <p class="text-muted small">
                                <i class="bi bi-film"></i>
                                <%= movie.genre %>
                            </p>

                            <p class="rating mb-2">
                                <i class="bi bi-star-fill"></i>
                                <%= movie.rating %> / 10
                            </p>

                            <div class="mt-auto d-flex gap-2">
                                <a href="/edit/<%= movie.id %>" class="btn btn-sm w-50 action-btn edit-btn">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a href="/delete/<%= movie.id %>" class="btn btn-sm w-50 action-btn delete-btn">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <!-- ================= FOOTER ================= -->
    <footer class="mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-3">
                    <h6 class="text-white">BookMyShow</h6>
                    <p>Movies, Events & Sports</p>
                </div>
                <div class="col-md-3">
                    <h6 class="text-white">Explore</h6>
                    <p>Movies | Events | Plays</p>
                </div>
                <div class="col-md-3">
                    <h6 class="text-white">Support</h6>
                    <p>Help | FAQs</p>
                </div>
                <div class="col-md-3">
                    <h6 class="text-white">Contact</h6>
                    <p>support@bookmyshow.com</p>
                </div>
            </div>

            <hr class="border-secondary">

            <p class="text-center small mb-0">
                ¬© 2025 BookMyShow Clone. All Rights Reserved.
            </p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>