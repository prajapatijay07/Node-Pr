<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Wishlist | Myntra</title>
<meta name="viewport" content="width=device-width, initial-scale=1">

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

<style>
body{
  font-family: Assistant, Arial;
  background:#f5f5f6;
  color:#282c3f;
}

/* ================= HEADER ================= */
header{
  background:#fff;
  border-bottom:1px solid #eaeaec;
  position:sticky;
  top:0;
  z-index:999;
}
.logo-img{ height:40px; }

.navbar-menu a{
  font-weight:700;
  font-size:14px;
  margin:0 14px;
  padding:20px 0;
  text-decoration:none;
  color:#282c3f;
}
.navbar-menu a:hover{
  border-bottom:3px solid #ff3f6c;
}

.search-box{ position:relative; }
.search-box input{
  width:100%;
  padding:10px 40px;
  background:#f5f5f6;
  border:none;
  border-radius:4px;
}
.search-box i{
  position:absolute;
  top:12px;
  left:14px;
  color:#94969f;
}

.nav-icons{
  display:flex;
  gap:20px;
  font-size:12px;
}
.nav-icons a{
  text-decoration:none;
  color:#282c3f;
  text-align:center;
}
.nav-icons i{
  display:block;
  font-size:18px;
}

/* ================= PROFILE DROPDOWN FIX ================= */
.profile {
  position: relative;
}

.profile-menu {
  display: none;
  position: absolute;
  right: 0;
  top: 100%;
  background: #fff;
  width: 200px;
  box-shadow: 0 10px 25px rgba(0, 0, 0, .1);
  padding: 15px;
  opacity: 0;
  visibility: hidden;
  transition: 0.2s ease;
  z-index: 2000;
}

.profile:hover .profile-menu {
  display: block;
  opacity: 1;
  visibility: visible;
}

.profile-menu a {
  display: block;
  margin: 8px 0;
  font-size: 14px;
  color: #282c3f;
  text-decoration: none;
}

.login-btn {
  border: 1px solid #ff3f6c;
  color: #ff3f6c;
  text-align: center;
  padding: 8px;
  font-weight: 700;
}

/* IMPORTANT: header overflow fix */
header {
  overflow: visible !important;
}

/* ================= PAGE ================= */
.page{
  max-width:1200px;
  margin:auto;
  padding:30px 15px;
}
.page h4{
  font-weight:700;
  margin-bottom:25px;
}

/* ================= CARD ================= */
.wishlist-grid{
  display:grid;
  grid-template-columns:repeat(auto-fill,minmax(260px,1fr));
  gap:20px;
}

.w-card{
  background:#fff;
  border-radius:8px;
  overflow:hidden;
  box-shadow:0 1px 2px rgba(0,0,0,.08);
  position:relative;
}

.w-card img{
  width:100%;
  height:320px;
  object-fit:cover;
  background:#f5f5f6;
}

.remove-btn{
  position:absolute;
  top:10px;
  right:10px;
  background:#fff;
  border-radius:50%;
  width:34px;
  height:34px;
  display:flex;
  align-items:center;
  justify-content:center;
  color:#282c3f;
  text-decoration:none;
}
.remove-btn:hover{
  color:#ff3f6c;
}

.w-body{
  padding:12px;
}

.brand{
  font-weight:700;
  font-size:14px;
}

.title{
  font-size:13px;
  color:#535665;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}

.rating{
  display:inline-flex;
  align-items:center;
  gap:5px;
  font-size:12px;
  border:1px solid #eaeaec;
  padding:3px 6px;
  margin:6px 0;
}

.price{
  font-weight:700;
}
.price del{
  color:#94969f;
  font-size:12px;
  margin-left:5px;
}
.discount{
  color:#ff905a;
  font-size:12px;
}

.size{
  font-size:12px;
  margin:6px 0;
  color:#535665;
}

.actions{
  display:flex;
  gap:10px;
  margin-top:10px;
}
.btn-bag{
  flex:1;
  background:#ff3f6c;
  color:#fff;
  border:none;
  font-weight:700;
  padding:8px;
  font-size:13px;
}
.btn-bag:hover{
  background:#e73362;
}

.btn-empty{
  background:#fff;
  border:1px solid #d4d5d9;
  padding:10px;
  font-weight:700;
}

/* EMPTY */
.empty-box{
  background:#fff;
  padding:50px;
  border-radius:8px;
  text-align:center;
}
.empty-box a{
  background:#ff3f6c;
  color:#fff;
  padding:10px 30px;
  font-weight:700;
  text-decoration:none;
}
/* FOOTER */
    footer {
      background: #fafbfc;
      padding: 40px 0;
      color: #94969f;
      font-size: 14px;
      margin-top: 60px;
    }
</style>
</head>

<body>

<!-- ================= HEADER ================= -->
<header>
  <div class="container d-flex align-items-center py-2">

    <a href="/user" class="me-4">
      <img src="/assets/myntra.jpeg" alt="Myntra" class="logo-img">
    </a>

    <div class="navbar-menu d-none d-md-flex">
      <a href="#">MEN</a>
      <a href="#">WOMEN</a>
      <a href="#">KIDS</a>
      <a href="#">HOME</a>
      <a href="#">BEAUTY</a>
    </div>

    <form method="get" action="/user" class="search-box flex-grow-1 mx-4">
      <i class="fa fa-search"></i>
      <input type="text" name="search" placeholder="Search for products, brands and more">
    </form>

    <div class="nav-icons">
      <div class="profile">
        <a href="#"><i class="fa-regular fa-user"></i>Profile</a>

        <div class="profile-menu">
          <% if(!userData){ %>
            <strong>Hello Guest</strong>
            <a href="/user/loginUser" class="login-btn">LOGIN / SIGNUP</a>
          <% } else { %>
            <strong>Hello <%= userData.username %></strong>
            <a href="/user/view-profile">My Profile</a>
            <a href="/user/change-password">Change Password</a>
            <a href="/user/logoutUser">Logout</a>
          <% } %>
        </div>
      </div>

      <a href="/user/favourite" style="position:relative">
        <i class="fa-regular fa-heart"></i>Wishlist
        <% if(favCount > 0){ %>
          <span class="badge bg-danger position-absolute top-0 start-100 translate-middle">
            <%= favCount %>
          </span>
        <% } %>
      </a>

      <a href="/user/cart" style="position:relative">
        <i class="fa-solid fa-bag-shopping"></i>Bag
        <% if(cartCount > 0){ %>
          <span class="badge bg-danger position-absolute top-0 start-100 translate-middle">
            <%= cartCount %>
          </span>
        <% } %>
      </a>
    </div>

  </div>
</header>


<!-- ================= CONTENT ================= -->
<div class="page">
<h4>My Wishlist</h4>

<% if(favourites.length === 0){ %>
  <div class="empty-box">
    <h5>Your wishlist is empty</h5>
    <p class="text-muted">Save items you like here</p>
    <a href="/user">CONTINUE SHOPPING</a>
  </div>
<% } else { %>

<div class="wishlist-grid">

<% favourites.forEach(item=>{ %>
  <div class="w-card">

    <a href="/user/favourite/remove/<%= item._id %>" class="remove-btn">
      <i class="fa fa-times"></i>
    </a>

    <img src="<%= item.image %>">

    <div class="w-body">
      <div class="brand"><%= item.brand || 'Brand' %></div>
      <div class="title"><%= item.title %></div>

      <div class="rating">
        ⭐ <strong><%= item.rating || 4.2 %></strong>
      </div>

      <div class="price">
        ₹<%= item.price %>
        <% if(item.mrp){ %>
          <del>₹<%= item.mrp %></del>
          <span class="discount">
            (<%= Math.round(((item.mrp-item.price)/item.mrp)*100) %>% OFF)
          </span>
        <% } %>
      </div>

      <div class="size">
        Size: <strong><%= item.size || 'M' %></strong>
      </div>

      <div class="actions">
        <a href="/user/add-cart/<%= item._id %>" class="btn-bag text-center">
          MOVE TO BAG
        </a>
      </div>
    </div>

  </div>
<% }) %>

</div>
<% } %>
</div>
<footer>
    <div class="container text-center">
      © <%= new Date().getFullYear() %> Myntra Clone
    </div>
  </footer>

</body>
</html>
