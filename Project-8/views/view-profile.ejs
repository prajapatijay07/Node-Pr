<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <title>User Profile | Myntra Clone</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
    body {
      font-family: "Assistant", sans-serif;
      background-color: #fff0f5;
      color: #282c3f;
    }

    /* HEADER */
    header {
      background: #fff;
      border-bottom: 1px solid #eaeaec;
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .logo-img {
      height: 40px;
    }

    .navbar-menu a {
      font-weight: 700;
      font-size: 14px;
      margin: 0 14px;
      padding: 20px 0;
      text-decoration: none;
      color: #282c3f;
    }

    .navbar-menu a:hover {
      border-bottom: 3px solid #ff3f6c;
    }

    .search-box {
      position: relative;
    }

    .search-box input {
      width: 100%;
      padding: 10px 40px;
      background: #f5f5f6;
      border: none;
      border-radius: 4px;
    }

    .search-box i {
      position: absolute;
      top: 12px;
      left: 14px;
      color: #94969f;
    }

    .nav-icons {
      display: flex;
      gap: 20px;
      font-size: 12px;
    }

    .nav-icons a {
      text-decoration: none;
      color: #282c3f;
      text-align: center;
      position: relative;
    }

    .nav-icons i {
      display: block;
      font-size: 18px;
    }

    /* PROFILE DROPDOWN */
    .profile {
      position: relative;
    }

    .profile-menu {
      position: absolute;
      right: 0;
      top: 100%;
      width: 220px;
      background: #fff;
      box-shadow: 0 10px 25px rgba(0,0,0,.1);
      padding: 15px;
      display: none;
    }

    .profile:hover .profile-menu {
      display: block;
    }

    .profile-menu a {
      display: block;
      margin: 8px 0;
      font-size: 14px;
      color: #282c3f;
      text-decoration: none;
    }

    .login-btn {
      border: 1px solid #ff3f6c;
      color: #ff3f6c;
      padding: 8px;
      font-weight: 700;
      text-align: center;
    }

    /* PROFILE CARD */
    .profile-card {
      max-width: 520px;
      margin: 70px auto;
      padding: 35px;
      background-color: #fff;
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    }

    .profile-header {
      text-align: center;
      margin-bottom: 25px;
    }

    .profile-header h2 {
      font-weight: 800;
      color: #ff3f6c;
    }

    .profile-detail {
      font-size: 1.1rem;
      margin-bottom: 15px;
    }

    .profile-detail i {
      color: #ff3f6c;
    }

    .btn-edit {
      background-color: #ff3f6c;
      color: #fff;
      font-weight: 700;
    }

    .btn-edit:hover {
      background-color: #e7335e;
    }
  </style>
</head>

<body>

<!-- HEADER -->
<header>
  <div class="container d-flex align-items-center py-2">

    <a href="/user" class="me-4">
      <img src="/assets/myntra.jpeg" class="logo-img">
    </a>

    <div class="navbar-menu d-none d-md-flex">
      <a href="#">MEN</a>
      <a href="#">WOMEN</a>
      <a href="#">KIDS</a>
      <a href="#">HOME</a>
      <a href="#">BEAUTY</a>
    </div>

    <form method="get" action="/user" class="search-box flex-grow-1 mx-4">
      <i class="fa fa-search"></i>
      <input type="text" name="search" placeholder="Search products">
    </form>

    <div class="nav-icons">
      <div class="profile">
        <a href="#"><i class="fa-regular fa-user"></i>Profile</a>
        <div class="profile-menu">
          <strong>Hello <%= user.username %></strong>
          <a href="/user/view-profile">My Profile</a>
          <a href="/user/change-password">Change Password</a>
          <a href="/user/logoutUser">Logout</a>
        </div>
      </div>

      <a href="/user/favourite">
        <i class="fa-regular fa-heart"></i>Wishlist
        <% if(favCount>0){ %>
          <span class="badge bg-danger position-absolute top-0 start-100 translate-middle"><%= favCount %></span>
        <% } %>
      </a>

      <a href="/user/cart">
        <i class="fa-solid fa-bag-shopping"></i>Bag
        <% if(cartCount>0){ %>
          <span class="badge bg-danger position-absolute top-0 start-100 translate-middle"><%= cartCount %></span>
        <% } %>
      </a>
    </div>
  </div>
</header>

<!-- SUCCESS MESSAGE -->
<div class="container">
  <% if(success && success.length>0){ %>
    <div class="alert alert-success alert-dismissible fade show mt-3">
      <%= success %>
      <button class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
</div>

<!-- PROFILE CARD -->
<div class="profile-card">
  <div class="profile-header">
    <h2>My Profile</h2>
  </div>

  <div class="profile-detail">
    <i class="fas fa-user me-2"></i>
    <strong>Name:</strong> <%= user.username %>
  </div>

  <div class="profile-detail">
    <i class="fas fa-envelope me-2"></i>
    <strong>Email:</strong> <%= user.email %>
  </div>

  <div class="text-center mt-4">
    <a href="/user" class="btn btn-edit me-2">
      ‚Üê Back to Shopping
    </a>

    <a href="/user/change-password" class="btn btn-outline-secondary">
      <i class="fas fa-key me-1"></i>Change Password
    </a>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
