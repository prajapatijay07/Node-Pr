<%- include('header') %>

<style>
    body {
        min-height: 100vh;
        font-family: 'Poppins', sans-serif;
        /* color: #e5e7eb; */
    }

    .profile-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 80px 15px;
    }

    .profile-container {
        width: 460px;
        background: linear-gradient(180deg, #0f172a, #020617);
        /* background: #020617; */
        padding: 40px;
        border-radius: 20px;
        box-shadow: 0 18px 45px rgba(0,0,0,0.7);
        text-align: center;
        border: 1px solid #1e293b;
    }

    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        background: linear-gradient(135deg, #2563eb, #1e40af);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 48px;
        color: #fff;
        margin: 0 auto 25px;
        box-shadow: 0 10px 30px rgba(37,99,235,0.45);
    }

    h2 {
        font-weight: 700;
        margin-bottom: 10px;
        color: #f8fafc;
    }

    h3 {
        font-size: 18px;
        margin-bottom: 8px;
        color: #c7d2fe;
    }

    p {
        font-size: 14px;
        color: #94a3b8;
        margin-bottom: 6px;
    }

    .btn-group {
        margin-top: 30px;
        display: flex;
        justify-content: center;
        gap: 15px;
        flex-wrap: wrap;
    }

    .btn-custom {
        padding: 12px 26px;
        border-radius: 30px;
        text-decoration: none;
        font-weight: 600;
        font-size: 15px;
        transition: 0.3s ease;
        border: none;
    }

    .btn-dashboard {
        background: linear-gradient(135deg, #22c55e, #16a34a);
        color: #ffffff;
        box-shadow: 0 6px 20px rgba(34,197,94,0.45);
    }

    .btn-dashboard:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(34,197,94,0.6);
    }

    .btn-logout {
        background: linear-gradient(135deg, #ef4444, #b91c1c);
        color: #ffffff;
        box-shadow: 0 6px 20px rgba(239,68,68,0.45);
    }

    .btn-logout:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 30px rgba(239,68,68,0.6);
    }
</style>

<div class="profile-wrapper">
    <div class="profile-container">
        <div class="profile-avatar">
            <i class="fas fa-user"></i>
        </div>

        <h2>Admin Profile</h2>
        <h3>Welcome, <%= admin.name %></h3>

        <p><strong>Email:</strong> <%= admin.email %></p>
        <p><strong>Role:</strong> <%= admin.role || 'Admin' %></p>

        <div class="btn-group">
            <a href="/dashboard" class="btn-custom btn-dashboard">
                <i class="fas fa-home me-1"></i> Dashboard
            </a>

            <a href="/logout" class="btn-custom btn-logout">
                <i class="fas fa-sign-out-alt me-1"></i> Logout
            </a>
        </div>
    </div>
</div>

<%- include('footer') %>
