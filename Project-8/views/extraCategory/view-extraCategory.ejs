<%- include('../header') %>

<div class="page-wrapper">

    <!-- Breadcrumb -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Extra Category List</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                            <li class="breadcrumb-item active">Extra Categories</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- Container -->
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">

                        <!-- Header -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="card-title mb-0">Extra Category Information</h4>
                            <a href="/extraCategory/add-extraCategory" class="btn btn-primary">
                                + Add Extra Category
                            </a>
                        </div>

                        <!-- Table -->
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover text-center align-middle">
                                <thead class="bg-dark text-white">
                                    <tr>
                                        <th>#</th>
                                        <th>Category</th>
                                        <th>Sub Category</th>
                                        <th>Extra Category</th>
                                        <th>Image</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (extraCategories.length > 0) { %>
                                        <% extraCategories.forEach((extraCate, i) => { %>
                                            <tr>
                                                <td><%= i + 1 %></td>

                                                <td>
                                                    <%= extraCate.categoryId
                                                        ? extraCate.categoryId.category
                                                        : 'N/A' %>
                                                </td>

                                                <td>
                                                    <%= extraCate.subCategoryId
                                                        ? extraCate.subCategoryId.subCategory
                                                        : 'N/A' %>
                                                </td>

                                                <td><%= extraCate.extraCategory %></td>

                                                <td>
                                                    <% if (extraCate.extraCategoryImage) { %>
                                                        <img src="<%= extraCate.extraCategoryImage %>"
                                                             height="60"
                                                             width="60"
                                                             class="rounded border">
                                                    <% } else { %>
                                                        <span class="text-muted">No Image</span>
                                                    <% } %>
                                                </td>

                                                <td>
                                                    <a href="/extraCategory/edit-extraCategory/<%= extraCate._id %>"
                                                       class="btn btn-sm btn-warning">
                                                        Edit
                                                    </a>

                                                    <a href="/extraCategory/delete-extraCategory/<%= extraCate._id %>"
                                                       class="btn btn-sm btn-danger"
                                                       onclick="return confirm('Are you sure you want to delete this extra category?')">
                                                        Delete
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="6" class="text-muted text-center">
                                                No extra category records found
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>
</div>

<%- include('../footer') %>
