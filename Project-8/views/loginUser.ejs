<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Login | Myntra Clone</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
    body {
      font-family: "Assistant", sans-serif;
      background-color: #fff0f5;
      color: #282c3f;
    }

    /* ================= HEADER ================= */
    header {
      background: #fff;
      border-bottom: 1px solid #eaeaec;
      position: sticky;
      top: 0;
      z-index: 1000;
    }

    .logo-img {
      height: 40px;
    }

    .navbar-menu a {
      font-weight: 700;
      font-size: 14px;
      margin: 0 14px;
      padding: 20px 0;
      text-decoration: none;
      color: #282c3f;
    }

    .navbar-menu a:hover {
      border-bottom: 3px solid #ff3f6c;
    }

    .search-box {
      position: relative;
    }

    .search-box input {
      width: 100%;
      padding: 10px 40px;
      background: #f5f5f6;
      border: none;
      border-radius: 4px;
    }

    .search-box i {
      position: absolute;
      top: 12px;
      left: 14px;
      color: #94969f;
    }

    .nav-icons {
      display: flex;
      gap: 20px;
      font-size: 12px;
    }

    .nav-icons a {
      text-decoration: none;
      color: #282c3f;
      text-align: center;
      position: relative;
    }

    .nav-icons i {
      display: block;
      font-size: 18px;
    }

    /* PROFILE DROPDOWN */
    .profile {
      position: relative;
    }

    .profile-menu {
      position: absolute;
      right: 0;
      top: 100%;
      width: 220px;
      background: #fff;
      box-shadow: 0 10px 25px rgba(0,0,0,.1);
      padding: 15px;
      display: none;
    }

    .profile:hover .profile-menu {
      display: block;
    }

    .profile-menu a {
      display: block;
      margin: 8px 0;
      font-size: 14px;
      color: #282c3f;
      text-decoration: none;
    }

    /* ================= LOGIN CARD ================= */
    .login-card {
      max-width: 420px;
      margin: 80px auto;
      padding: 35px;
      background: #fff;
      border-radius: 20px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.12);
    }

    .login-card h2 {
      text-align: center;
      color: #ff3f6c;
      font-weight: 800;
      margin-bottom: 25px;
    }

    .form-control {
      border-radius: 8px;
    }

    .btn-pink {
      background-color: #ff3f6c;
      color: white;
      font-weight: 700;
      border: none;
    }

    .btn-pink:hover {
      background-color: #e7335e;
      color: white;
    }

    .forgot-link {
      font-size: 13px;
      color: #ff3f6c;
      text-decoration: none;
    }
  </style>
</head>

<body>

<!-- ================= HEADER ================= -->
<header>
  <div class="container d-flex align-items-center py-2">

    <a href="/user" class="me-4">
      <img src="/assets/myntra.jpeg" class="logo-img">
    </a>

    <div class="navbar-menu d-none d-md-flex">
      <a href="#">MEN</a>
      <a href="#">WOMEN</a>
      <a href="#">KIDS</a>
      <a href="#">HOME</a>
      <a href="#">BEAUTY</a>
    </div>

    <form method="get" action="/user" class="search-box flex-grow-1 mx-4">
      <i class="fa fa-search"></i>
      <input type="text" name="search" placeholder="Search products">
    </form>

    <div class="nav-icons">

      <div class="profile">
        <a href="#"><i class="fa-regular fa-user"></i>Profile</a>
        <div class="profile-menu">
          <a href="/user/login">Login</a>
          <a href="/user/register">Register</a>
        </div>
      </div>

      <a href="/user/favourite">
        <i class="fa-regular fa-heart"></i>Wishlist
      </a>

      <a href="/user/cart">
        <i class="fa-solid fa-bag-shopping"></i>Bag
      </a>

    </div>
  </div>
</header>

<!-- ================= LOGIN FORM ================= -->
<div class="container">
  <div class="login-card">

    <h2>Login</h2>

    <% if (typeof messages !== 'undefined' && messages.error && messages.error.length > 0) { %>
      <div class="alert alert-danger text-center">
        <%= messages.error[0] %>
      </div>
    <% } %>

    <form action="/user/loginUser" method="POST">

      <div class="mb-3">
        <label class="form-label fw-bold">Email</label>
        <input type="email" name="email" class="form-control" required>
      </div>

      <div class="mb-3">
        <label class="form-label fw-bold d-flex justify-content-between">
          <span>Password</span>
          <a href="/user/forgot-password" class="forgot-link">Forgot?</a>
        </label>
        <input type="password" name="password" class="form-control" required>
      </div>

      <button type="submit" class="btn btn-pink w-100 py-2">
        Login
      </button>

    </form>

    <p class="text-center mt-3">
      Donâ€™t have an account?
      <a href="/user/register" class="fw-bold text-decoration-none" style="color:#ff3f6c">Sign up</a>
    </p>

  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
