<%- include('../header') %>

<div class="page-wrapper">

    <!-- Breadcrumb -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Sub Category List</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Sub Category</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <!-- Container -->
    <div class="container-fluid">

        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">

                        <!-- Title + Button -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h4 class="card-title">Sub Category Information</h4>
                            <a href="/subCategory/add-subCategory" class="btn btn-primary">
                                + Add Sub Category
                            </a>
                        </div>

                        <!-- Table -->
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped text-center">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Category Name</th>
                                        <th>Category Image</th>
                                        <th>Sub Category Name</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
<tbody>
<% if (subCategories.length > 0) { %>
  <% subCategories.forEach((subCate, i) => { %>
    <tr>
      <td><%= i + 1 %></td>

      <!-- Category Name -->
      <td>
        <%= subCate.category ? subCate.category.category : 'No Category' %>
      </td>

      <!-- Category Image -->
      <td>
        <% if (subCate.category && subCate.category.categoryImage) { %>
          <img src="<%= subCate.category.categoryImage %>" height="60" width="60" class="rounded">
        <% } else { %>
          <span class="text-muted">No Image</span>
        <% } %>
      </td>

      <!-- Sub Category Name -->
      <td><%= subCate.subCategory %></td>

      <!-- Sub Category Image -->
      <td>
        <% if (subCate.subCategoryImage) { %>
          <img src="<%= subCate.subCategoryImage %>" height="60" width="60" class="rounded">
        <% } else { %>
          <span class="text-muted">No Image</span>
        <% } %>
      </td>

      <!-- Actions -->
      <td>
        <a href="/subCategory/edit-subCategory/<%= subCate._id %>" class="btn btn-sm btn-warning">
          Edit
        </a>

        <a href="/subCategory/delete-subCategory/<%= subCate._id %>"
           class="btn btn-sm btn-danger"
           onclick="return confirm('Are you sure?')">
          Delete
        </a>
      </td>
    </tr>
  <% }) %>
<% } else { %>
  <tr>
    <td colspan="6" class="text-center text-muted">
      No Sub Category Records Found
    </td>
  </tr>
<% } %>
</tbody>

