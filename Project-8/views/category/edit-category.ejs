<%- include('../header') %>

<div class="page-wrapper">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Category</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
                            <li class="breadcrumb-item"><a href="/category/view-category">Category</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Edit Category</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">

                <div class="card">
                    <form class="form-horizontal"
                          action="/category/update-category/<%= category._id %>"
                          method="post"
                          enctype="multipart/form-data">

                        <div class="card-body">
                            <h4 class="card-title">Edit Category</h4>

                            <!-- Category Name -->
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">
                                    Category Name
                                </label>
                                <div class="col-sm-9">
                                    <input type="text"
                                           name="category"
                                           value="<%= category.category %>"
                                           class="form-control"
                                           required>
                                </div>
                            </div>

                            <!-- Current Image -->
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">
                                    Current Image
                                </label>
                                <div class="col-sm-9">
                                    <img src="<%= category.categoryImage %>"
                                         height="100"
                                         width="100"
                                         class="img-thumbnail">
                                </div>
                            </div>

                            <!-- Change Image -->
                            <div class="form-group row">
                                <label class="col-sm-3 text-right control-label col-form-label">
                                    Change Image
                                </label>
                                <div class="col-sm-9">
                                    <div class="custom-file">
                                        <input type="file"
                                               class="custom-file-input"
                                               name="categoryImage">
                                        <label class="custom-file-label">
                                            Choose new image...
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Buttons -->
                        <div class="border-top">
                            <div class="card-body">
                                <button type="submit" class="btn btn-primary">
                                    Update Category
                                </button>
                                <a href="/category/view-category" class="btn btn-secondary">
                                    Cancel
                                </a>
                            </div>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
